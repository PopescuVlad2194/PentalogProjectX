<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_custom">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/albumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_20"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/albumYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/albumFavorite"
        android:layout_width="@dimen/cb_dimen"
        android:layout_height="@dimen/cb_dimen"
        android:layout_marginEnd="@dimen/standard_margin_20"
        android:button="@drawable/selector_favorite_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:useMaterialThemeColors="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/albumYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin_20"
        android:textColor="@color/focus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/albumFavorite"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/divider"
        android:layout_below="@id/albumName"
        android:layout_marginTop="@dimen/standard_margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albumName" />

</androidx.constraintlayout.widget.ConstraintLayout>